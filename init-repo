#/bin/sh

cd `dirname $0`

repoName=$1
repoPath="github.com/$repoName"

echo "Repository name: $repoName($repoPath)"
echo -n "OK? [y/N]: "
read answer

case $answer in 
    [Yy]* )
    sed -i -e s@github.com/streamwest-1629/repo_template@$repoPath@g readme.md
    sed -i -e s@github.com/streamwest-1629/repo_template@$repoPath@g .github/ISSUE_TEMPLATE/improve.md
    rm $0
    ;;
    * )
    echo "Canceled."
    ;;
esac